extends base

block content
  main.main
    - console.log(review)
    .user-view
      .user-view__content
        .user-view__form-container
          form#updateReview.form
            .form__group
              .form__title.u-center-text
                h1.heading-primary Your Review Settings

            .form__group
              input#reviewShowTitle.form__input.input-text(type='text' name='reviewShowTitle' placeholder=`Show Title: ${review.show.title}` disabled)

            .form__group
              input#reviewRating.form__input.input-text(type='number' name='reviewRating' placeholder='Rating*' value=`${review.rating}` required)
              label.form__label.label-text(for='reviewRating') Please enter a rating.

            .form__group
              textarea#review.form__text-area.input-text(name='textareaReview' placeholder='Your Review*' required)= review.review
              label.form__label.label-text(for='review') Please provide your review.
            
            .form__group
              button#btnUpdateReviewData.btn.btn--blue(type='submit' name='btnUpdateReviewData' data-show-id=`${review.show.id}`) Update Review Settings

        .line &nbsp;

        .user-view__form-container
          form#deleteReviewForm.form
            .form__group.form__group--info
              .form__title.u-center-text
                h1.heading-primary.u-margin-bottom-small Delete Your Review

                small.form__info-small.small-text= `Please enter your password to delete your review for ${review.show.title}.`

            .form__group
              input#password.form__input.input-text(type='password' placeholder='••••••' required)
              label.form__label.label-text(for='password') Please enter your password.

            .form__group
              button#btnDeleteReviewData.btn.btn--red(type='submit' name='btnUpdateReviewData' data-review-id=`${review.id}`) Delete Review