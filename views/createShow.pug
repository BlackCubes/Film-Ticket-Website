extends base

block content
  main.main
    .user-view
      .user-view__content
        .user-view__form-container.form-container__multiform
          .form-container__title.u-center-text.u-margin-bottom-small
            h1.heading-primary.u-margin-bottom-small Create Your Show

          form#eoCreateShowForm.form.form__multiform
            //- .form__group
            //-   .title.u-center-text
            //-     h1.heading-primary.u-margin-bottom-small Create Your Show

            //-     small.form__info-small.small-text Let's create your show! Fields with * are required.

            fieldset#eoCreateShowFieldset.form__fieldset
              .form__group.u-center-text.u-margin-bottom-small
                small.form__info-small.small-text Let's create your show! Fields with * are required.

              .form__group
                input#showTitle.form__input.input-text(type='text' placeholder='Title*' required)
                label.form__label.label-text(for='showTitle') Please give a title for your show.

              .form__group
                .form__mpaa
                  select#selectMpaa.dropdown(name='select-mpaa' tabindex='0' required)
                    option(value) MPAA Rating*

                  - const mpaaList = ['G', 'PG', 'PG-13', 'R', 'NC-17', 'NR', 'Unrated', 'TV-Y', 'TV-Y7', 'TV-G', 'TV-PG', 'TV-14', 'TV-MA']

                  each mpaa in mpaaList
                    option(value=`${mpaa}`)= mpaa

              .form__group
                input#showDuration.form__input.input-text(type='number' placeholder='Duration*' required)
                label.form__label.label-text(for='showDuration') Please enter your show's duration in minutes

              .form__group
                .form__date
                  .form__date-month
                    select#showOriginalMonth.dropdown(name='select-originalmonth' tabindex='0' required)
                      option(value) Original Month*

                      - const months = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December']

                      each month in months
                        option(value=`${month}`)= month

                  .form__date-day
                    select#showOriginalDay.dropdown(name='select-originalday' tabindex='0' required)
                      option(value) Day*

                      - const days = [...Array(32).keys()].splice(1)

                      each day in days
                        option(value=`${day}`)= day

                  .form__date-year
                    select#showOriginalYear.dropdown(name='select-originalyear' tabindex='0' required)
                      option(value) Year*

                      - const now = new Date().getFullYear()
                      - const years = Array(now - (now - 101)).fill('').map((val, i) => now - i)

                      each year in years
                        option(value=`${year}`)= year
              
              .form__group
                .form__content-type
                  select#showContentType.dropdown(name='select-contenttype' tabindex='0' required)
                    option(value) Content Select*
                    option(value='Film') Film
                    option(value='TV') TV
              
              .form__group
                button#btnNext-1.btn.btn--blue Next

            fieldset.form__fieldset
              .form__group.u-center-text
                small.form__info-small.small-text For inputting cast/crews information, please contact the admin.

              .form__group
                textarea#showOverviewForm.form__text-area.input-text(name='textarea-overview' placeholder='Show Overview*' required)
                label.form__label.label-text(for='showOverviewFrom') Please provide a short synopsis i.e. overview or logline.

              .form__group
                textarea#showSynopsisForm.form__text-area.input-text(name='textarea-synopsis' placeholder='Show Synopsis (optional)')
                label.form__label.label-text(for='showSynopsisForm') A synopsis is a condensed outline. Don't spoil.

              .form__group
                .form__duo-btn
                  .form__duo-btn-previous
                    button#btnPrev-1.btn.btn--blue.btn--duo Previous

                  .form__duo-btn-next
                    button#btnNext-2.btn.btn--blue.btn--duo Next

            fieldset.form__fieldset
              .form__group.u-center-text
                small.form__info-small.small-text These fields are optional, but are useful for your audience.

              .form__group
                input#showLanguage.form__input.input-text(type='text' placeholder='Language (optional)')
                label.form__label.label-text(for='showLanguage') What language it will have? Ex: 'French'

              .form__group
                input#showSubtitles.form__input.input-text(type='text' placeholder='Subtitles (optional)')
                label.form__label.label-text(for='showSubtitles') Any subtitles? Ex: English

              .form__group
                input#showGenre.form__input.input-text(type='text' placeholder='Genre(s) (optional)')
                label.form__label.label-text(for='showGenre') What genre(s) is it?

              .form__group
                .form__duo-btn
                  .form__duo-btn-previous
                    button#btnPrev-2.btn.btn--blue.btn--duo Previous

                  .form__duo-btn-next
                    button#btnNext-3.btn.btn--blue.btn--duo Next

            fieldset.form__fieldset
              .form__group.form__group--info.u-center-text
                small.form__info-small.small-text A special venue is where guest speakers or a big event will take place, and you want to sell your show's tickets publicly. For private events where the public cannot buy tickets, please contact the admin.

              .form__group
                input#showPrice.form__input.input-text(type='number' placeholder='Show Price*')
                label.form__label.label-text(for='showDirector') Please enter your price on the show.
              
              .form__group
                .form__special-venue
                  select#showSpecialVenue.dropdown(name='select-specialvenue' tabindex='0')
                    option(value) Special Venue (optional)
                    option(value='y') Yes
                    option(value='n') No
              
              .form__group
                .form__duo-btn
                  .form__duo-btn-previous
                    button#btnPrev-3.btn.btn--blue.btn--duo Previous

                  .form__duo-btn-submit
                    button#btnCreateShow.btn.btn--blue.btn--duo Create
              