extends ./account/baseAccount

block content
  main.main.main--error
    .error-page
      .error-page__background
        img.error-page__background-img(src='/img/error-main.jpg')

      .error-page__description
        .error-page__description-title
          h2.heading-secondary.heading-secondary--error I don't judge websites by their worst mistakes

        .error-page__description-message
          p.paragraph= msg
          p.paragraph Please try again.
          p.book-text Back to:
          a.book-text(href='/') Home