header.container
  nav.nav
    .nav__left: a.nav__logo(href='/'): img.nav__logo-img(src='/img/icon-large.png', alt="Home Logo")
    .nav__right
      .nav__region
        ul.nav__region-menu.average-text
          li.nav__region-item: a.nav__region-link(href='/shows') The Shows
          li.nav__region-item: a.nav__region-link(href='/theaters') The Theaters
          li.nav__region-item: a.nav__region-link(href='#') Special Venues
      .nav__toggle-wrapper
        if user
          a.nav__profile.nav__profile--logout Logout
          a.nav__profile(href='/me')
            img.nav__user-img(src=`/img/users/${user.photo}`, alt=`${user.name}'s photo`)
            span= user.name.split(' ')[0]
        else
          a.nav__profile(href='/register') Join The Club
          a.nav__profile(href='/login') Login
        input#toggle(type='checkbox')
        label.nav__toggle-container(for='toggle')
          span.button.nav__toggle-button
        ul.nav__toggle-menu
          li.nav__toggle-item: a.nav__toggle-link(href='#') About Kinetotickets
          li.nav__toggle-item: a.nav__toggle-link(href='#') More
          li.nav__toggle-item: a.nav__toggle-link(href='#') Members
          li.nav__toggle-item: a.nav__toggle-link(href='#') Careers
          li.nav__toggle-item: a.nav__toggle-link(href='#') Contact Us